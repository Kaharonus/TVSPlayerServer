<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Design.Height="480"
             Design.Width="800"
             >
  <Grid RowDefinitions="1*,1*,1*" ColumnDefinitions="1*,2*,1*" Background="#AA000000">
    <Grid Row="1" Column="1"  Background="#333333">
      <Grid  Margin="10">
        <TextBlock Name="Header" Foreground="#F5F5F5" FontSize="16"></TextBlock>
        <TextBlock Name="Body" Foreground="#F5F5F5" FontSize="14" Margin="0,25,0,35" TextWrapping="Wrap"></TextBlock>
          <Button Name="Cancel" Content="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
      </Grid>
    </Grid>

  </Grid>
</UserControl>
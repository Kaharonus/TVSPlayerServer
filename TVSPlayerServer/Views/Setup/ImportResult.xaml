<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60" Design.Width="800"
 >
  <Grid Name="Base" Classes="LightMouseOver">
    <Grid Margin="5" HorizontalAlignment="Left">
      <TextBlock  Text="{Binding Path=SeriesName}" VerticalAlignment="Top" Foreground="#F5F5F5" FontSize="18" />
      <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
        <TextBlock Text="Path:" Foreground="#F5F5F5" FontSize="14" />
        <TextBlock Text="{Binding Path=DirPath}" Foreground="#F5F5F5" FontSize="14" Margin="5,0,0,0" />
        <TextBlock Text="Release date:" Foreground="#F5F5F5" FontSize="14" Margin="20,0,0,0" />
        <TextBlock  Text="{Binding Path=ReleaseDate}" VerticalAlignment="Center" Foreground="#F5F5F5" FontSize="14" Margin="5,0,0,0" />
      </StackPanel>
    </Grid>
    <StackPanel Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
      <Button Name="Details" Content="Details" Width="60" Margin="2" Background="#555555" BorderBrush="#555555" Foreground="#F5F5F5" />
      <Button Name="Edit" Content="Edit" Width="60" Margin="2" Background="#555555" BorderBrush="#555555" Foreground="#F5F5F5" />
      <Button Name="Remove" Content="Remove" Width="60" Margin="2" Background="#555555" BorderBrush="#555555" Foreground="#F5F5F5" />

    </StackPanel>

  </Grid>
</UserControl>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Design.Height="480" Design.Width="800" Background="#333333">
  <Grid RowDefinitions="60,1*,35" Margin="10">
      <StackPanel Grid.Row="0">
        <TextBlock Text="Import location" FontSize="16" Margin="0,0,0,5" HorizontalAlignment="Center" Foreground="#F5F5F5"></TextBlock>
        <TextBox Name="ImportInput" FontSize="14" Watermark="Right click to select" />
      </StackPanel>
    <ScrollViewer Grid.Row="1"  Classes="Dark">
      <StackPanel Margin="5" Name="ResultPanel"></StackPanel>
    </ScrollViewer>
    <Button Name="Continue" Grid.Row="2" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Continue"></Button>
    <Button Name="Return" Grid.Row="2" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Return"></Button>
  </Grid>
</UserControl>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Design.Height="480" Design.Width="800">
  <Grid RowDefinitions="1*,4*,1*" ColumnDefinitions="1*,4*,1*" Background="#AA000000">
    <Grid Grid.Row="1" Grid.Column="1" Background="#333333">
      <Grid RowDefinitions="35,1*" Margin="10">
        <StackPanel Grid.Row="0">
          <TextBox Name="ImportInput" FontSize="14" Watermark="Write to search" />
        </StackPanel>
        <ScrollViewer Grid.Row="1"  Classes="Dark">
          <StackPanel Margin="5" Name="ResultPanel" />
        </ScrollViewer>
      </Grid>
    </Grid>
  </Grid>

</UserControl>
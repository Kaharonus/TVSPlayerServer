<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Design.Width="800"
 >
  <Grid Name="Base" Classes="LightMouseOver">
    <Grid Margin="5" HorizontalAlignment="Left">
      <TextBlock  Text="{Binding Path=SeriesName}" VerticalAlignment="Center" Foreground="#F5F5F5" FontSize="18" />
    </Grid>
    <StackPanel Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
      <Button Name="Details" Content="Details" Width="60" Margin="2" Background="#555555" BorderBrush="#555555" Foreground="#F5F5F5" />
      <Button Name="Remove" Content="Select" Width="60" Margin="2" Background="#555555" BorderBrush="#555555" Foreground="#F5F5F5" />
    </StackPanel>
  </Grid>
</UserControl>